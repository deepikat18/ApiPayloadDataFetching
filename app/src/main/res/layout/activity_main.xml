<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/fetchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Fetch Data" />


    <TextView
        android:id="@+id/jsonTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fetchButton"
        android:layout_marginTop="51dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/jsonTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jsonTextView1"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/jsonTextView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jsonTextView2"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/jsonTextView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jsonTextView3"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/jsonTextView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jsonTextView4"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/jsonTextView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jsonTextView5"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/jsonTextView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jsonTextView6"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/jsonTextView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jsonTextView7"
        android:layout_marginTop="10dp" />
</RelativeLayout>
